<launch>
    <!-- Send a static GPS fix to every new subscriber. Edit latitude and longitude in launch/demo.gps to use your own position. -->
   <!--  
   <node pkg="rostopic" type="rostopic" name="fake_gps_fix" args="pub /gps/fix sensor_msgs/NavSatFix -latch -file=$(find rviz_pics)/launch/demo.gps" output="screen"/>
-->
    <arg name="use_bag" default="False" />  
    <arg name="bag_name" default="sample" />


    <group if="$(arg use_bag)" >
        <node pkg="rosbag" type="play" name="rosbag_play" args="$(find rviz_pics)/data/$(arg bag_name).bag" />
    </group>

    <node pkg="rviz_pics" type="plot_markers" name="plot_markers" output="screen"  args=""></node> -->


    <!-- Start rviz with a pre-configured AerialMap instance. It will use the fake GPS fix from above. -->
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find rviz_pics)/launch/demo.rviz" output="screen" />
</launch>
